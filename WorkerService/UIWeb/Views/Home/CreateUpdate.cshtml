@model UIWeb.Models.CheckAppViewModel

@{
    ViewData["Title"] = "Create / Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateUpdate</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AppName" class="control-label"></label>
                <input asp-for="AppName" class="form-control" placeholder="Uygulama Adı Giriniz" />
                <span asp-validation-for="AppName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUrl" class="control-label"></label>
                <input asp-for="AppUrl" class="form-control" placeholder="http://www.example.com" />
                <span asp-validation-for="AppUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interval" class="control-label"></label>
                <input asp-for="Interval" class="form-control" placeholder="Saniye Giriniz" />
                <span asp-validation-for="Interval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
